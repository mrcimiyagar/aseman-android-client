<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="72.5dp"
    android:elevation="6dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="112dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/inviteAdapterAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@color/colorBlackBlue3"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/inviteAdapterTitle"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <kasper.android.pulse.components.OneClickImageButton
            android:id="@+id/invitesAdapterAccept"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/tag_background_action"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_done"
            android:tint="@color/colorBlue"
            android:layout_marginRight="16dp"/>

        <kasper.android.pulse.components.OneClickImageButton
            android:id="@+id/invitesAdapterIgnore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/tag_background_cancel"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_close"
            android:tint="@android:color/holo_red_light"
            android:layout_marginRight="72dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorBlackBlue3"/>

</LinearLayout>