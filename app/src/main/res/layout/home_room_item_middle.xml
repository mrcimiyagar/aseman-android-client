<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="96.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/nil"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="-24dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/homeRoomItemAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@color/darkNil"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/homeRoomItemName"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp">

                    <com.vanniktech.emoji.EmojiTextView
                        android:id="@+id/homeRoomItemLastAction"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:textColor="#999"
                        android:textSize="16sp"
                        android:layout_marginRight="44dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:lines="1"
                        android:ellipsize="end"/>

                    <FrameLayout
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/homeRoomItemUnreadCount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#fff"
                            android:text="99"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:visibility="gone"
                            android:background="@drawable/circle_blue"/>

                        <ImageView
                            android:id="@+id/homeRoomItemMyMessageState"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_seen"
                            android:tint="#fff"
                            android:visibility="gone"
                            android:padding="2dp"/>

                    </FrameLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBlackBlue4"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>